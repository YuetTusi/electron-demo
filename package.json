{
	"name": "electron-demo",
	"version": "1.0.0",
	"description": "Electron Demo Project",
	"main": "dist/main.js",
	"scripts": {
		"build": "webpack --config webpack.dev.js",
		"build:prod": "webpack --config webpack.prod.js",
		"serve": "webpack serve --config webpack.dev.js",
		"prego": "tsc",
		"go": "electron .",
		"start": "concurrently \"yarn run build\" \"yarn run serve\" \"yarn run go\"",
		"prepack": "tsc && yarn run build:prod",
		"pack": "electron-builder --dir",
		"predist": "tsc && yarn run build:prod",
		"dist": "electron-builder"
	},
	"build": {
		"appId": "4c9e34def3049532",
		"productName": "ElectronDemo",
		"copyright": "Copyright Â© 2021 yuet",
		"directories": {
			"buildResources": "static"
		},
		"asar": true,
		"files": [
			"dist/**/*",
			"node_modules/**/*",
			"packages.json"
		],
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"icon": "icon.png",
			"publisherName": "yuet",
			"artifactName": "${productName}.${ext}",
			"requestedExecutionLevel": "requireAdministrator"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "installer.ico",
			"perMachine": true
		}
	},
	"author": "yuet",
	"license": "MIT",
	"devDependencies": {
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"concurrently": "^6.0.1",
		"electron": "^12.0.2",
		"electron-builder": "^22.10.5",
		"html-webpack-plugin": "^5.3.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"ts-loader": "^8.1.0",
		"typescript": "^4.2.4",
		"webpack": "^5.31.0",
		"webpack-cli": "^4.6.0",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0"
	}
}
